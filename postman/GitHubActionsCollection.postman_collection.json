							"// TEST 1: Verificar que la respuesta es un array",
							"pm.test(\"La respuesta es un array\", function () {",
							"    pm.expect(pm.response.json()).to.be.an(\"array\");",
							"});",
							"",
							"// TEST 2: Verificar que el array tiene al menos 3 elementos",
							"pm.test(\"El array tiene al menos 3 elementos\", function () {",
							"    pm.expect(pm.response.json().length).to.be.at.least(3);",
							"});",
							"",
							"// TEST 3: Verificar que cada objeto tiene las claves userId, id, title y body",
							"pm.test(\"Cada item tiene userId, id, title y body\", function () {",
							"    const data = pm.response.json();",
							"    data.forEach(item => {",
							"        pm.expect(item).to.have.property(\"userId\");",
							"        pm.expect(item).to.have.property(\"id\");",
							"        pm.expect(item).to.have.property(\"title\");",
							"        pm.expect(item).to.have.property(\"body\");",
							"    });",
							"});",
							"",
							"// TEST 4: Verificar que todos los userId sean números",
							"pm.test(\"Todos los userId son números\", function () {",
							"    const data = pm.response.json();",
							"    data.forEach(item => {",
							"        pm.expect(item.userId).to.be.a(\"number\");",
							"    });",
							"});",
							"",
							"// TEST 5: Verificar que los títulos no están vacíos",
